{
  "name": "codenamephp/platform.di",
  "description": "Simple dependency injection container based on www.php-di.org",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Bastian Schwarz",
      "email": "bastian@codename-php.de"
    }
  ],
  "require": {
    "php": "^7",
    "codenamephp/platform.core": "^1",
    "php-di/php-di": "^6"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4",
    "doctrine/cache": "~1.4",
    "mockery/mockery": "^1.1",
    "pdepend/pdepend": "^2",
    "phploc/phploc": "^4.0",
    "phpmd/phpmd": "^2",
    "phpunit/phpunit": "^7",
    "sebastian/phpcpd": "^4.0",
    "squizlabs/php_codesniffer": "^3.3",
    "wimg/php-compatibility": "^8.2"
  },
  "autoload": {
    "psr-0": {
      "de\\codenamephp\\": ["src/main/php"]
    }
  },
  "autoload-dev": {
    "psr-0": {
      "de\\codenamephp\\": ["src/test/php"]
    }
  },
  "config": {
    "sort-packages": true
  }
}
