{
  "name": "codenamephp/platform.di",
  "description": "Simple dependency injection container based on www.php-di.org",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Bastian Schwarz",
      "email": "bastian@codename-php.de"
    }
  ],
  "require": {
    "php": ">=5.6",
    "codenamephp/platform.core": "^1",
    "php-di/php-di": "^5"
  },
  "require-dev": {
    "codenamephp/platform.test": "^2",
    "doctrine/cache": "~1.4",
    "pdepend/pdepend": "^2",
    "squizlabs/php_codesniffer": "^2",
    "phploc/phploc": "^3",
    "phpmd/phpmd": "^2",
    "sebastian/phpcpd": "^2",
    "theseer/phpdox": "^0.8",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "frenck/php-compatibility": "*"
  },
  "autoload": {
    "classmap": ["src/main/php"]
  },
  "autoload-dev": {
    "psr-0": {
      "de\\codenamephp\\": ["src/main/php", "src/test/php"]
    }
  }
}
